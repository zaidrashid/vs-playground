@{
    ViewBag.Title = "UploadFile";
}

@section script {
    <script type="text/javascript">

    </script>
}

<h2>UploadFile</h2>
@using (Html.BeginForm("UploadFile", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table>
        <tr>
            <td>
                <label>Title</label>
            </td>
            <td>
                <input type="text" id="Title" name="Title" style="width: 240px;" />
            </td>
        </tr>
        <tr>
            <td>Upload File: </td>
            <td>
                <input type="file" name="file" id="file" /></td>
            @*<td>Upload File: </td><td><input type="file" name="file2" id="file2" /></td>*@
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" id="btnSubmit" value="Upload" /></td>
        </tr>
        <tr>
            @if (ViewData["Success"] != "")
            {
                <td>
                    <label>@ViewData["Success"]</label></td>
            }
        </tr>
    </table>
    
    <a>Link</a>
}
